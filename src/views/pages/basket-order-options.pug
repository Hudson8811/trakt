							.item__block
								h2.item__block-title.title-3 Покупатель
								button(type="button").item__block-link.item__btn.small-text-2 Редактировать

							form.form-lk(action="")
								.form-lk__wrap
									label.basket-order-options-page__label
										p.basket-order-options-page__label-name.small-text-2 Фамилия*
										input.basket-order-options-page__input.input-text(type="text" placeholder="Иванов" )
